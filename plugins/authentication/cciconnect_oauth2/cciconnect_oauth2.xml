<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0" type="plugin" group="authentication">
	<name>Authentication - OAuth 2 CCI Connect</name>
	<author>Hugo Moracchini</author>
	<creationDate>December 2018</creationDate>
	<copyright>(C) 2019 Hugo Moracchini All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>hugo@morac.ch</authorEmail>
	<authorUrl>hugo.morach.ch/ini</authorUrl>
	<version>1.0</version>
	<description>PLG_AUTHENTICATION_CCICONNECT_OAUTH2_XML_DESCRIPTION</description>
	<files>
		<filename plugin="cciconnect_oauth2">cciconnect_oauth2.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_authentication_cciconnect_oauth2.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_authentication_cciconnect_oauth2.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_authentication_cciconnect_oauth2.ini</language>
		<language tag="fr-Fr">language/fr-FR/fr-FR.plg_authentication_cciconnect_oauth2.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="client_id" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_CLIENTID_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_CLIENTID_DESC"/>
				<field name="client_secret" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_CLIENTSECRET_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_CLIENTSECRET_DESC"/>
				<field name="scopes" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_SCOPES_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_SCOPES_DESC" default="openid" />
				<field name="auth_url" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_AUTHURL_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_AUTHURL_DESC"/>
				<field name="token_url" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_TOKENURL_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_TOKENURL_DESC"/>
				<field name="redirect_url" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_REDIRECTURL_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_REDIRECTURL_DESC"/>
				<field name="sso_account_url" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_ACCOUNT_URL_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_ACCOUNT_URL_DESC" />
				<field name="email_subject" type="text" label="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_EMAIL_SUBJECT_LABEL" description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_EMAIL_SUBJECT_DESC" />
				<field name="email_body" type="editor" width="50" filter="safehtml" hide="readmore,pagebreak" default="" label='PLG_AUTHENTICATION_CCICONNECT_OAUTH2_EMAIL_BODY_LABEL' description="PLG_AUTHENTICATION_CCICONNECT_OAUTH2_EMAIL_BODY_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>